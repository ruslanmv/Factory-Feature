# IBM WatsonX.ai Configuration
# ============================
# Get your credentials from: https://cloud.ibm.com/

# WatsonX API Key
WATSONX_APIKEY=your_watsonx_api_key_here

# WatsonX Project ID
PROJECT_ID=your_project_id_here

# WatsonX API URL (default: https://eu-gb.ml.cloud.ibm.com)
WATSONX_URL=https://eu-gb.ml.cloud.ibm.com

# Application Configuration
# ==========================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Vector Database Configuration
# ==============================

# Chroma DB persistence directory
CHROMA_PERSIST_DIR=./chroma_db

# Embedding model name
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# LLM Configuration
# =================

# Model ID for WatsonX
MODEL_ID=meta-llama/llama-3-70b-instruct

# Maximum new tokens to generate
MAX_NEW_TOKENS=900

# Minimum new tokens to generate
MIN_NEW_TOKENS=50

# Decoding method (greedy, sample)
DECODING_METHOD=greedy

# Temperature for sampling (0.0-1.0)
TEMPERATURE=0.2

# Number of retrieval documents
RETRIEVAL_K=5

# Gradio Application
# ===================

# Gradio server port
GRADIO_PORT=7860

# Gradio server name (0.0.0.0 for public access)
GRADIO_SERVER_NAME=127.0.0.1
